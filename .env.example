# Bristol Site Intelligence Platform - Environment Configuration
# Copy this file to .env and configure your API keys

# Database
DATABASE_URL=your_postgresql_connection_string
PGHOST=your_postgres_host
PGPORT=5432
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGDATABASE=your_database_name

# Authentication
SESSION_SECRET=your_secure_session_secret
REPL_ID=your_replit_id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your_replit_domain.replit.app

# Mapping Services
VITE_MAPBOX_TOKEN=your_mapbox_token

# AI Services
OPENAI_API_KEY=your_openai_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Data APIs (for real data replacement)
CENSUS_API_KEY=your_census_api_key_optional
BLS_API_KEY=your_bls_api_key
FBI_API_KEY=your_fbi_api_key

# Web Scraping
FIRECRAWL_API_KEY=your_firecrawl_api_key

# ElevenLabs (for voice AI)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Microsoft 365 Integration (optional)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Development Settings
NODE_ENV=development
PORT=5000