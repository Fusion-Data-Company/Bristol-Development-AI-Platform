{
  "scripts": {
    "dev": "NODE_ENV=development --max-old-space-size=4096 tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production --max-old-space-size=4096 node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "heap:snapshot": "kill -SIGUSR2 $(pgrep -f 'tsx server/index.ts')",
    "logs:structured": "NODE_ENV=production LOG_LEVEL=INFO npm run start",
    "test:smoke": "curl -f http://localhost:5000/healthz || exit 1"
  }
}